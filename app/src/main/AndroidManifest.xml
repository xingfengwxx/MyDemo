<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 使用网络 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="com.example.shared_data_provider.READ_SHARED_DATA_PERMISSION" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDemo"
        tools:targetApi="31">
        <activity
            android:name=".WebViewActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="true">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <provider
            android:name=".sp.SPContentProvider"
            android:authorities="com.pl.sphelper"
            android:exported="false"
            android:process=":sphelper" />
    </application>

</manifest>